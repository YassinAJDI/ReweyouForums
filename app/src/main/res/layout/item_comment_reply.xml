<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect4"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp"

    android:paddingLeft="60dp">

    <in.reweyou.reweyouforums.customView.CircularImageView
        android:id="@+id/image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/download"
        app:myborderWidth="0dp" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/image"
        android:text="Username"
        android:textColor="#455A64"
        android:textSize="13dp"
        android:textStyle="bold" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/userlevel"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/message"
        android:background="@drawable/background_user_level"
        android:drawableLeft="@drawable/ic_user_level_layer_small"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:lines="1"

        android:maxLines="5"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"

        android:text="Expert"
        android:textColor="#fff"
        android:textSize="10.5dp"
        android:textStyle="bold" />

    <in.reweyou.reweyouforums.customView.ColorTextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"

        android:layout_toRightOf="@+id/image"
        android:autoLink="web"
        android:paddingRight="8dp"
        android:text="Hello World!"
        android:textColor="#78909C"
        android:textSize="13dp" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="2hr ago"
        android:textColor="#B0BEC5"
        android:textSize="11dp"
        android:textStyle="italic" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/likenumber"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_toRightOf="@+id/time"
        android:background="@drawable/ripple_effect2"

        android:paddingBottom="1dp"

        android:paddingTop="1dp"
        android:text="0"

        android:textColor="#607D8B"
        android:textSize="12dp"
        android:textStyle="bold" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/tempnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_toRightOf="@+id/likenumber"
        android:background="@drawable/ripple_effect2"
        android:paddingBottom="1dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp"
        android:text="like"

        android:textColor="#607D8B"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/templike"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_heart_like_alpha" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_heart_like_grey" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/edit"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_toRightOf="@+id/tempnum"
        android:background="@drawable/ripple_effect2"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="EDIT"

        android:textColor="@color/red"
        android:textSize="12dp"
        android:textStyle="bold" />


</RelativeLayout>