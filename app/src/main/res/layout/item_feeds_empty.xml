<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/card_padding_top"
    android:scrollbars="none">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:clickable="true"
        android:stateListAnimator="@animator/lift_on_touch"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_text"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            app:shimmer_animation_duration="1200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.reweyou.reweyouforums.customView.CircularImageView
                        android:id="@+id/profilepic"

                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:src="#9ac1d0d7"
                        card_view:myborderWidth="0dp" />

                    <TextView
                        android:id="@+id/usernamee"
                        android:layout_width="60dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/profilepic"
                        android:background="#9ac1d0d7"
                        android:textColor="#9ac1d0d7"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userlevel"
                        android:layout_width="40dp"
                        android:layout_height="12dp"
                        android:layout_below="@id/usernamee"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/profilepic"
                        android:background="#9ac1d0d7"
                        android:drawablePadding="2dp"
                        android:gravity="center"

                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="7dp"

                        android:textColor="#9ac1d0d7"
                        android:textSize="10.5dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/usernamee"
                        android:layout_marginRight="12dp"
                        android:background="#9ac1d0d7"
                        android:gravity="top"
                        android:paddingLeft="10dp"
                        android:textColor="#9ac1d0d7"
                        android:textSize="12dp" />


                </RelativeLayout>

                <in.reweyou.reweyouforums.customView.ColorTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:autoLink="web"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="2dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/padding_main_description"
                    android:paddingRight="@dimen/padding_main_description"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textColor="@color/main_description_text"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/main_description_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"

                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="24dp"
                    android:background="#9ac1d0d7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#9ac1d0d7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#9ac1d0d7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="14dp"

                        android:background="#9ac1d0d7" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="14dp"
                    android:background="#9ac1d0d7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <in.reweyou.reweyouforums.customView.TextViewCustomFont
                        android:id="@+id/numlikes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:background="#9ac1d0d7"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="#9ac1d0d7"
                        android:textSize="15dp" />

                    <in.reweyou.reweyouforums.customView.TextViewCustomFont
                        android:id="@+id/fe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/numlikes"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"


                        android:text="Likes"
                        android:textColor="@color/sub_description_color"
                        android:textSize="13dp" />

                    <in.reweyou.reweyouforums.customView.TextViewCustomFont
                        android:id="@+id/numcomments"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_toLeftOf="@+id/ddd"
                        android:layout_toRightOf="@+id/fe"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/main_description_text"
                        android:textSize="15dp" />

                    <in.reweyou.reweyouforums.customView.TextViewCustomFont
                        android:id="@+id/ddd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="12dp"

                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text="Comments"
                        android:textColor="@color/sub_description_color"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="EDIT"
                        android:textColor="@color/red" />

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/likebutton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="2dp"
                        android:padding="11dp"
                        app:srcCompat="@drawable/ic_heart_like" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:alpha="@dimen/view_line_alpha"
                    android:background="#577583" />

                <RelativeLayout
                    android:id="@+id/commmentcont"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    >

                    <in.reweyou.reweyouforums.customView.TextViewCustomFont
                        android:id="@+id/addcomment"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:background="#9ac1d0d7"
                        android:gravity="center_vertical"

                        android:textColor="#9ac1d0d7" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/button_send_disable"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:alpha="@dimen/view_line_alpha"
                    android:background="#577583"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    />
            </LinearLayout>
        </io.supercharge.shimmerlayout.ShimmerLayout>

        <ImageView
            android:id="@+id/like"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:alpha="1.0"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_heart_like" />

    </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>

