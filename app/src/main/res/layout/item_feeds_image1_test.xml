<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="230dp"
    android:layout_height="230dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"


    android:clickable="true"
    android:stateListAnimator="@animator/lift_on_touch"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1.5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    tools:targetApi="lollipop">

    <in.reweyou.reweyouforums.customView.CustomImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/ripple_effect_white_rec"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#87000000"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="#Photography"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <in.reweyou.reweyouforums.customView.ColorTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:autoLink="web"
        android:background="@drawable/gradient_black_bottom"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/padding_main_description"
        android:paddingRight="@dimen/padding_main_description"
        android:paddingTop="12dp"
        android:text="The unprecedented policy decision by the Government to Demonetize the economy of the higher denomination currencies (i.e. Rs. 500 and Rs. 1000), comprises of three broad aspects. With the objective of cracking down on Black money, counterfeit (fake currency),
terro"
        android:textColor="#fff"
        android:textIsSelectable="true"
        android:textSize="@dimen/main_description_text_size" />


</android.support.v7.widget.CardView>

