<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <in.reweyou.reweyouforums.customView.RecyclerViewPager
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:layout_marginBottom="40dp"

        app:rvp_singlePageFling="true"
        app:rvp_triggerOffset="0.3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:alpha="0.70"
        android:background="@color/sub_description_color" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFont
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:foreground="@drawable/ripple_effect2"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="Create a Post"
        android:textColor="#657983"
        android:textSize="14dp" />
</RelativeLayout>
