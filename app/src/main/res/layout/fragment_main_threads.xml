<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <in.reweyou.reweyouforums.customView.RecyclerViewPager
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:layout_marginBottom="40dp"

        app:rvp_singlePageFling="true"
        app:rvp_triggerOffset="0.3" />



    <RelativeLayout
        android:id="@+id/fetchingdatacontainer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40.7dp"

        android:background="#dbe7ed"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:text="Fetching data..."
                android:textColor="@color/main_description_text"

                android:textSize="13dp" />

            <ProgressBar
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="7dp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:alpha="0.70"
        android:background="@color/sub_description_color" />

    <in.reweyou.reweyouforums.customView.TextViewCustomFontBold
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:foreground="@drawable/ripple_effect2"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="Create a Post"
        android:textColor="#657983"
        android:textSize="15dp" />
</RelativeLayout>
