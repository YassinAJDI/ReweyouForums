<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:scrollbars="none">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:clickable="true"
            android:stateListAnimator="@animator/lift_on_touch"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true"
            tools:targetApi="lollipop">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <in.reweyou.reweyouforums.customView.ColorTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="2dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/padding_main_description"
                    android:paddingRight="@dimen/padding_main_description"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textColor="@color/main_description_text"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/main_description_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="4dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:alpha="0.54"
                        android:background="#577583" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <in.reweyou.reweyouforums.customView.CircularImageView
                            android:id="@+id/profilepic"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/download"
                            card_view:myborderWidth="0dp" />

                        <TextView
                            android:id="@+id/usernamee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:paddingLeft="6dp"
                            android:paddingTop="4dp"
                            android:text="Username"
                            android:textColor="@color/main_bottom_user_text"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/groupname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="2dp"

                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:lines="1"
                            android:paddingRight="8dp"
                            android:paddingTop="4dp"

                            android:text="#Photography"
                            android:textColor="@color/main_bottom_user_text"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>

