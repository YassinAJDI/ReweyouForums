<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:clickable="true"
        android:stateListAnimator="@animator/lift_on_touch"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        tools:targetApi="lollipop">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.reweyou.reweyouforums.customView.CircularImageView
                    android:id="@+id/profilepic"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:src="#9ac1d0d7"
                    card_view:myborderWidth="0dp" />

                <TextView
                    android:id="@+id/usernamee"
                    android:layout_width="60dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@+id/profilepic"
                    android:background="#9ac1d0d7"
                    android:textColor="#9ac1d0d7"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userlevel"
                    android:layout_width="40dp"
                    android:layout_height="8dp"
                    android:layout_below="@id/usernamee"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/profilepic"
                    android:background="#9ac1d0d7"
                    android:drawablePadding="2dp"
                    android:gravity="center"

                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="7dp"

                    android:textColor="#9ac1d0d7"
                    android:textSize="10.5dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="30dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/usernamee"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:background="#9ac1d0d7"
                    android:gravity="top"
                    android:paddingLeft="10dp"
                    android:textColor="#9ac1d0d7"
                    android:textSize="12dp" />


            </RelativeLayout>

            <in.reweyou.reweyouforums.customView.ColorTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/padding_main_description"
                android:paddingRight="@dimen/padding_main_description"
                android:paddingTop="8dp"
                android:text=""
                android:textColor="@color/main_description_text"
                android:textIsSelectable="true"
                android:textSize="@dimen/main_description_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"

                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:background="#9ac1d0d7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp"
                android:background="#9ac1d0d7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="14dp"

                    android:background="#9ac1d0d7" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="4dp"
                android:alpha="@dimen/view_line_alpha"
                android:background="#577583" />

            <RelativeLayout
                android:id="@+id/commmentcont"
                android:layout_width="match_parent"
                android:layout_height="32dp"

                android:background="@drawable/ripple_effect2">

                <in.reweyou.reweyouforums.customView.TextViewCustomFont
                    android:id="@+id/addcomment"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:background="#9ac1d0d7"
                    android:gravity="center_vertical"

                    android:textColor="#9ac1d0d7" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/button_send_disable"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:alpha="@dimen/view_line_alpha"
                android:background="#577583"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/like"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:alpha="1.0"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_heart_like" />

    </android.support.v7.widget.CardView>


</RelativeLayout>

