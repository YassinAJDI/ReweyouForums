<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="8dp">

    <in.reweyou.reweyouforums.customView.CircularImageView
        android:id="@+id/profilepic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/download"
        card_view:myborderWidth="0dp" />

    <TextView
        android:id="@+id/usernamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/profilepic"
        android:paddingLeft="10dp"
        android:text="Username"
        android:textColor="#424242"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userlevel"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/usernamee"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/profilepic"
        android:background="@drawable/background_user_level"
        android:drawableLeft="@drawable/ic_user_level_layer_small"
        android:drawablePadding="2dp"
        android:gravity="center"

        android:lines="1"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"

        android:text="Expert"
        android:textColor="#fff"
        android:textSize="10.5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linebar"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:paddingLeft="4dp"
        android:paddingRight="8dp"
        android:text="#Photography"
        android:textColor="#424242"
        android:textSize="12dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/usernamee"
        android:layout_marginRight="12dp"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:text="2 hour ago"
        android:textColor="#9e9e9e"
        android:textSize="12dp" />

    <View
        android:id="@+id/linebar"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/userlevel"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:alpha=".44"
        android:background="@color/divider" />
</RelativeLayout>