<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <in.reweyou.reweyouforums.customView.CircularImageView
        android:id="@+id/profilepic"

        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/download"
        card_view:myborderWidth="0dp" />

    <TextView
        android:id="@+id/usernamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/profilepic"
        android:paddingLeft="10dp"
        android:text="Username"
        android:textColor="@color/main_description_text"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userlevel"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/usernamee"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/profilepic"
        android:background="@drawable/background_user_level"
        android:drawableLeft="@drawable/ic_user_level_layer_small"
        android:drawablePadding="2dp"
        android:gravity="center"

        android:lines="1"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"

        android:text="Expert"
        android:textColor="#fff"
        android:textSize="10.5dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/usernamee"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="12dp"
        android:alpha="0.54"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:text="2 hour ago"
        android:textColor="#5f808f"
        android:textSize="12dp" />




</RelativeLayout>