<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"


    android:clickable="true"
    android:stateListAnimator="@animator/lift_on_touch"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1.5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    tools:targetApi="lollipop">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <include layout="@layout/item_row_usernametop" />


        <in.reweyou.reweyouforums.customView.ColorTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:ellipsize="end"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"

            android:paddingTop="4dp"
            android:text="The unprecedented policy decision by the Government to Demonetize the economy of the higher denomination currencies (i.e. Rs. 500 and Rs. 1000), comprises of three broad aspects. With the objective of cracking down on Black money, counterfeit (fake currency),
terro"
            android:textColor="#424242"
            android:textSize="13dp" />


        <android.support.v7.widget.CardView
            android:id="@+id/cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/rlcont"
                android:layout_width="match_parent"
                android:layout_height="148dp"

                android:background="@drawable/ripple_effect22">

                <ImageView
                    android:id="@+id/imagelink"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/headlinelink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imagelink"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:text="headline bkb jbjkb jbkjb kjbjkb kjbjkb"
                    android:textColor="#424242"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionlink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headlinelink"
                    android:layout_toRightOf="@+id/imagelink"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"

                    android:text="description fjwenfjnfjwenfwelnfffffffffffffffffffffffffffffnfjwnjwnfjqfnqlfnwljdlqflflfnqwjlflqwflqwnflqwfq"

                    android:textColor="#424242"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/linklink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headlinelink"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="https:////vvjenvjwevw"
                    android:textColor="#757575"
                    android:textSize="13dp"
                    android:textStyle="italic" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:alpha="0.44"
            android:background="@color/divider" />

        <include layout="@layout/item_row_like" />

    </LinearLayout>

</android.support.v7.widget.CardView>

