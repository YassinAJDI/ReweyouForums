<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:scrollbars="none">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"


            android:clickable="true"
            android:stateListAnimator="@animator/lift_on_touch"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true"
            tools:targetApi="lollipop">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/imagelink"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/headlinelink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dddee4ee"
                    android:maxLines="2"
                    android:paddingBottom="5dp"

                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:text="headline bkb jbjkb jbkjb kjbjkb kjbjkb"
                    android:textColor="#424242"
                    android:textSize="14dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/descriptionlink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headlinelink"
                    android:layout_toRightOf="@+id/imagelink"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"

                    android:text="description fjwenfjnfjwenfwelnfffffffffffffffffffffffffffffnfjwnjwnfjqfnqlfnwljdlqflflfnqwjlflqwflqwnflqwfq"

                    android:textColor="#424242"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/linklink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headlinelink"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="1"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="https:////vvjenvjwevw"
                    android:textColor="#757575"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical">

                    <in.reweyou.reweyouforums.customView.ColorTextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="2dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="@dimen/padding_main_description"
                        android:paddingRight="@dimen/padding_main_description"
                        android:paddingTop="8dp"
                        android:text=""
                        android:textColor="@color/main_description_text"

                        android:textIsSelectable="true"
                        android:textSize="@dimen/main_description_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:alpha="0.54"
                        android:background="#577583" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp">

                        <in.reweyou.reweyouforums.customView.CircularImageView
                            android:id="@+id/profilepic"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/download"
                            card_view:myborderWidth="0dp" />


                        <TextView
                            android:id="@+id/usernamee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:paddingLeft="6dp"

                            android:paddingTop="2dp"
                            android:text="Username"
                            android:textColor="@color/main_bottom_user_text"
                            android:textSize="13dp"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/groupname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="2dp"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:lines="1"
                            android:paddingRight="8dp"
                            android:paddingTop="2dp"

                            android:text="#Photography"
                            android:textColor="@color/main_bottom_user_text"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <include
                    layout="@layout/item_row_like"
                    android:visibility="gone" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


</ScrollView>