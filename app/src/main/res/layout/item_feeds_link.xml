<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="none">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:stateListAnimator="@animator/lift_on_touch"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        tools:targetApi="lollipop">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <include layout="@layout/item_row_usernametop" />


            <ImageView
                android:id="@+id/imagelink"
                android:layout_width="match_parent"

                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/headlinelink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddee4ee"
                android:maxLines="2"
                android:paddingBottom="5dp"

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="headline bkb jbjkb jbkjb kjbjkb kjbjkb"
                android:textColor="#424242"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/descriptionlink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headlinelink"
                android:layout_toRightOf="@+id/imagelink"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"

                android:paddingRight="10dp"

                android:text="description fjwenfjnfjwenfwelnfffffffffffffffffffffffffffffnfjwnjwnfjqfnqlfnwljdlqflflfnqwjlflqwflqwnflqwfq"

                android:textColor="#424242"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/linklink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headlinelink"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:lines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="https:////vvjenvjwevw"
                android:textColor="#757575"
                android:textSize="14dp"
                android:textStyle="italic"
                android:visibility="gone" />

            <in.reweyou.reweyouforums.customView.ColorTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/padding_main_description"
                android:paddingRight="@dimen/padding_main_description"
                android:paddingTop="8dp"
                android:text=""
                android:textColor="@color/main_description_text"
                android:textIsSelectable="true"
                android:textSize="@dimen/main_description_text_size" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</ScrollView>