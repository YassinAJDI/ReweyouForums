<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.reweyou.reweyouforums">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- <uses-permission android:name="android.permission.READ_PHONE_STATE" /> -->

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- <uses-permission android:name="com.android.alarm.permission.SET_ALARM" /> -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- Get permission for reliable local dispatching on non-Google Play devices. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <meta-data
        android:name="firebase_analytics_collection_deactivated"
        android:value="true" />
    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode" />

    <application
        android:name="in.reweyou.reweyouforums.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="in.reweyou.reweyouforums.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" />
        <activity
            android:name="in.reweyou.reweyouforums.Signup"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="in.reweyou.reweyouforums.Feed"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Feed" />
        <activity
            android:name="in.reweyou.reweyouforums.PostReport"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="video/*" />
            </intent-filter>
        </activity>

        <receiver android:name="in.reweyou.reweyouforums.Notification" />

        <activity
            android:name="in.reweyou.reweyouforums.TutorialScreen"
            android:screenOrientation="portrait" />

        <!--
         &lt;!&ndash; SMS Receiver &ndash;&gt;
         <receiver android:name=".classes.SmsReceiver">
             <intent-filter android:priority="99999">
                 <action android:name="android.provider.Telephony.SMS_RECEIVED" />
             </intent-filter>
         </receiver>
        -->
        <!-- Intent service -->

        <service
            android:name="in.reweyou.reweyouforums.classes.HttpService"
            android:exported="false" />

        <activity
            android:name="in.reweyou.reweyouforums.VideoCapturetest"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.reweyou.reweyouforums.Videorow"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Preview" />
        <activity
            android:name="in.reweyou.reweyouforums.MyProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.reweyou.reweyouforums.PermissionsActivity"
            android:screenOrientation="portrait" />
        <activity android:name="in.reweyou.reweyouforums.MyReports" />

        <!-- Firebase Notifications -->
        <service android:name="in.reweyou.reweyouforums.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="in.reweyou.reweyouforums.fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- Firebase Notifications -->


        <!--
             Register AnalyticsReceiver and AnalyticsService to support background
             dispatching on non-Google Play devices.
        -->
        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.analytics.AnalyticsService"
            android:enabled="true"
            android:exported="false" />

        <!-- ... -->

        <activity
            android:name="in.reweyou.reweyouforums.WhatsNew"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.reweyou.reweyouforums.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="in.reweyou.reweyouforums.FullImage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Preview" />
        <activity
            android:name="in.reweyou.reweyouforums.VideoDisplay"
            android:label="@string/title_activity_video_display"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Preview" />
        <activity
            android:name="in.reweyou.reweyouforums.Invite"
            android:label="@string/title_activity_invite"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="in.reweyou.reweyouforums.ReviewActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_review"
            android:screenOrientation="portrait"
            android:taskAffinity=""
            android:theme="@style/Theme.Sliding.Lights"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="in.reweyou.reweyouforums.ReviewActivityQR"
            android:label="@string/title_activity_review"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:host="www.reweyou.in" />
                <data android:pathPrefix="/qr/" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.reweyou.reweyouforums.YourReview"
            android:label="@string/title_activity_your_review"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gnzlt.AndroidVisionQRReader.QRActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.reweyou.reweyouforums.LikesActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_review"
            android:screenOrientation="portrait"
            android:taskAffinity=""
            android:theme="@style/Theme.Sliding.Lights" />
        <activity
            android:name="in.reweyou.reweyouforums.ForumMainActivity"
            android:label="@string/title_activity_forum_main"
            android:theme="@style/AppTheme2.NoActionBar" />
        <activity
            android:name="in.reweyou.reweyouforums.CommentActivity"
            android:label="@string/title_activity_comment"
            android:screenOrientation="portrait"

            android:theme="@style/AppTheme2.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="in.reweyou.reweyouforums.GroupActivity"
            android:label="@string/title_activity_group"
            android:theme="@style/AppTheme2.NoActionBar" />
        <activity
            android:name="in.reweyou.reweyouforums.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.reweyou.reweyouforums.CreateActivity"
            android:label="@string/title_activity_create"
            android:screenOrientation="portrait"
            android:taskAffinity=""
            android:theme="@style/Theme.Sliding.Lights"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="in.reweyou.reweyouforums.EditActivity"
            android:label="@string/title_activity_edit"
            android:theme="@style/AppTheme2.NoActionBar"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>